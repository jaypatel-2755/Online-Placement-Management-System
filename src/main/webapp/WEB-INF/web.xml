    </servlet>
    <servlet>
        <servlet-name>DeleteStudentServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.DeleteStudentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminCompanyListServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.AdminCompanyListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCompanyServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.AddCompanyServlet</servlet-class>
