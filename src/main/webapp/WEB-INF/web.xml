    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLogoutServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.AdminLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DownloadResumeServlet</servlet-name>
        <servlet-class>com.me.finaldesignproject.DownloadResumeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentLoginServlet</servlet-name>
        <url-pattern>/StudentLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentRegisterServlet</servlet-name>
        <url-pattern>/StudentRegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentProfileServlet</servlet-name>
        <url-pattern>/StudentProfileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompanyListServlet</servlet-name>
